extends layout

block stylesheets
    style.
        @media(max-width: 992px) {
            footer {
                display: none;
            }
        }

block scripts
    script.
        $(document).ready(function() {
            var menu = !{menu};
            var sections = menu.sections;
            
            console.log(menu);
            
            var count = 0;
            
            $('#sub').append(menu.sub);
            
            for (var i = 0; i < sections.length; i++) {
                if (count >= 12) {
                    var row = $('<div></div>');
                    row.addClass("row");
                    $('.menu').append(row);
                    count -= 12;
                }
                var title = $("<h3></h3>").text(sections[i].title);
                var container = $('<div></div>');
                title.css("text-align", "left");
                container.append(title);
                 if (sections[i].col == 1) {
                    $('#col-1').append(container);
                 } else if(sections[i].col == 2) {
                    $('#col-2').append(container);
                 }
                
                var items = sections[i].items;
                
                for (var q = 0; q < items.length; q++) {
                    var miTitle = (items[q].price > -1) ? (items[q].alc > -1) ? items[q].title + " (" + items[q].alc + "%) - $" + items[q].price : items[q].title + " $" + items[q].price : items[q].title;
                    var menuItem = $("<p></p>").text(miTitle);
                    menuItem.css("margin-left", "5%");
                    var desc = $('<p></p>').text(items[q].description);
                    desc.css("margin-left", "10%");
                    container.append(menuItem, desc);
                }
                
                count += sections[i].col;
                console.log(count);
            }
        });

block content
    div.primary-content.menu
        h1(style='text-align: center') Beer in Bottles and Cans
        h2(style='text-align: center' id='sub')
        div.row(style='margin: 0')
            div.col-md-6(id="col-1")
            div.col-md-6(id="col-2")
        